# .bashrc

source_file(){
    if [ -f $1 ]; then
        source $1
    fi
}
source_file "/etc/bashrc"
source_file "~/.bash_aliases"
source_file "~/.bashellrc/bash_aliases"

reload(){
    shell=`ps | grep $$ | grep -v grep | awk '{print $4}'`
    if [[ $shell =~ "bash"  ]] || [[ $0 =~ "bash" ]]; then
        source $HOME/.bashrc
    elif [[ $0 =~ "zsh" ]] || [[ $shell =~ "zsh" ]]; then
        source $HOME/.zshrc
    else
        echo "What shell?"
    fi
}

stop(){
    local pids=$(ps -x | egrep "$1" | cut -c 1-5)
    if [[ $pids != "" ]]
    then
        echo "Stopping $1"
        echo $pids | xargs kill
    else
        echo "regex $1 has no match"
    fi
}


export EDITOR="vim"
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
export LANGUAGE="en_US.UTF-8"
export LSCOLORS=bxfxaxdxcxegedabagacadÂ¬


export PATH=$HOME/anaconda3/bin:$PATH
